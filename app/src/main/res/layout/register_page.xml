<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/tb_layout_register"
        android:layout_width="300dp"
        android:layout_height="287dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.617">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Identity:"
                android:textAlignment="gravity"
                android:textColor="#616161"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spi_identity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/shallowBlue"
                android:entries="@array/identity"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Phone Number:"
                android:textAlignment="gravity"
                android:textColor="#616161"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center"
                android:hint="Phone"
                android:inputType="textPersonName"
                android:textSize="16dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/login_name"
                android:textAlignment="center"
                android:textColor="#616161"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="Real Name"
                android:inputType="textPersonName"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/login_passwd"
                android:textAlignment="center"
                android:textColor="#616161"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tv_reg_passwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center"
                android:hint="Not less than 8 digits"
                android:inputType="textPassword"
                android:textSize="16dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Email:"
                android:textAlignment="center"
                android:textColor="#616161"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tv_email"
                android:layout_width="192dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center"
                android:hint="Enter Your Email"
                android:inputType="textPersonName"
                android:textSize="16dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Invite Code"
                android:textAlignment="center"
                android:textColor="#616161"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tv_inviteCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center"
                android:hint="Invite Code"
                android:inputType="textPersonName"
                android:textSize="16dp" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.212">

        <Button
            android:id="@+id/bt_comfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comfirm" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/bt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>