<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MyTeam.TeamFragment"
    android:background="@drawable/tg_wallpaper_blue"
    >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="331dp"
        android:layout_height="309dp"
        android:layout_marginTop="316dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_bindTeacher"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Choose Teacher : "
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spin_bindTeacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="243dp"
            android:orientation="vertical"></LinearLayout>

        <Button
            android:id="@+id/btn_bindRElation"
            android:layout_width="74dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:text="@string/btn_bind" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>